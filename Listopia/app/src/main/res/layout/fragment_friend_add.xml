<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_friend_email"
            style="@style/ImageView.Size24.FitCenter.Margin16Start20Top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_input_layout_friend_email"
            app:srcCompat="@drawable/ic_email_search" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_friend_email"
            style="@style/TextInputMaterial.Margin16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_view_friend_email"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_friend_email"
                style="@style/EditText.MaxLine1.maxLength200"
                android:hint="@string/label_friend_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_add_friend"
            style="@style/ButtonTextMaterial.Margin16NoTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/action_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_input_layout_friend_email" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>