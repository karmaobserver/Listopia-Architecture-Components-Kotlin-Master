<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="shoppingListModel"
            type="com.aleksej.makaji.listopia.data.repository.model.ShoppingListModel"/>
    </data>
    <androidx.cardview.widget.CardView
        style="@style/CardViewMaterial.BackgroundRipple.Margin4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_shopping_list_name"
                style="@style/TextViewAppearanceBody1.Margin8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{shoppingListModel.name}"
                app:layout_constraintBottom_toTopOf="@+id/progress_bar_shopping_list"
                app:layout_constraintEnd_toStartOf="@+id/text_view_checked_products"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Shopping list name" />

            <TextView
                android:id="@+id/text_view_checked_products"
                style="@style/TextViewAppearanceBody1.Primary.Size18.Margin4End"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                app:layout_constraintBottom_toTopOf="@+id/progress_bar_shopping_list"
                app:layout_constraintEnd_toStartOf="@+id/text_view_slash"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="4"/>

            <TextView
                android:id="@+id/text_view_slash"
                style="@style/TextViewAppearanceBody1.Primary.Size18.Margin4End"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_slash"
                app:layout_constraintBottom_toTopOf="@+id/progress_bar_shopping_list"
                app:layout_constraintEnd_toStartOf="@+id/text_view_max_products"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_max_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewAppearanceBody1.Primary.Size18.Margin8End"
                android:text="17"
                app:layout_constraintBottom_toTopOf="@+id/progress_bar_shopping_list"
                app:layout_constraintEnd_toStartOf="@+id/view_line_image_button"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="17"/>

            <View
                android:id="@+id/view_line_image_button"
                android:layout_height="0dp"
                style="@style/ViewLine.Width1dp.Primary"
                app:layout_constraintBottom_toTopOf="@+id/progress_bar_shopping_list"
                app:layout_constraintEnd_toStartOf="@+id/image_button_shopping_list_options"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/image_button_shopping_list_options"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/button_selector_transparent"
                app:layout_constraintBottom_toTopOf="@+id/progress_bar_shopping_list"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_dots_vertical_black" />

            <ProgressBar
                android:id="@+id/progress_bar_shopping_list"
                style="@style/ProgressBarMaterial"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:max="100"
                android:progress="40"
                android:progressDrawable="@drawable/progress_bar_layer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>