<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="userModel"
            type="com.aleksej.makaji.listopia.data.repository.model.UserModel"/>
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_friends"
        style="@style/CardViewMaterial.BackgroundRipple.Margin4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_view_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/image_view_avatar"
                style="@style/ImageView.Size32.Margin4"
                app:imageUrl="@{userModel.avatar}"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_friend_name"
                style="@style/TextViewAppearanceBody1.Margin8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{userModel.id}"
                app:layout_constraintEnd_toStartOf="@+id/image_button_options"
                app:layout_constraintStart_toEndOf="@+id/image_view_avatar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="User Name" />

            <ImageButton
                android:id="@+id/image_button_options"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/button_selector_transparent"
                app:layout_constraintStart_toEndOf="@+id/text_view_friend_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_dots_vertical_black" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>