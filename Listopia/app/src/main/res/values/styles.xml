<resources>
    <style name="AppTheme" parent="BaseAppTheme"/>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <!--Highlight color-->
        <item name="android:colorControlHighlight">@color/colorAccent</item>

        <!--Animations for fragment and activity transitions-->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="ThemeOverlayAppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="ThemeOverlayLight" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ToolbarLight" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!--<style name="ButtonPrimary" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>-->

    <!--Text View-->
    <style name="TextViewAppearanceHeadline1" parent="@style/TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextViewAppearanceHeadline1.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewAppearanceHeadline1.Primary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewAppearanceHeadline1.Primary.Bold.Margin16Start">
        <item name="android:layout_marginStart">@dimen/margin_16</item>
    </style>

    <style name="TextViewAppearanceHeadline1.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewAppearanceBody1" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextViewAppearanceBody1.Grey">
        <item name="android:textColor">@color/grey_40</item>
    </style>

    <style name="TextViewAppearanceBody1.Grey.Margin8StartEnd">
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
    </style>

    <style name="TextViewAppearanceBody1.Margin8">
        <item name="android:layout_margin">@dimen/margin_8</item>
    </style>

    <style name="TextViewAppearanceBody1.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewAppearanceBody1.Bold.Margin8StartEnd">
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
    </style>

    <style name="TextViewAppearanceBody1.Bold.Margin8NoBottom">
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
    </style>

    <style name="TextViewAppearanceBody1.Margin8StartEnd">
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
    </style>

    <style name="TextViewAppearanceBody1.Margin8NoTop">
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
    </style>

    <style name="TextViewAppearanceBody1.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextViewAppearanceBody1.Italic.Margin2StartMargin8Bottom">
        <item name="android:layout_marginStart">@dimen/margin_2</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
    </style>

    <style name="TextViewAppearanceBody1.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewAppearanceBody1.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewAppearanceBody1.Primary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewAppearanceBody1.Primary.Bold.Margin8NoTop">
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
    </style>

    <style name="TextViewAppearanceBody1.Primary.Size18">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="TextViewAppearanceBody1.White.Margin20">
        <item name="android:layout_margin">@dimen/margin_20</item>
    </style>

    <style name="TextViewAppearanceBody1.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewAppearanceBody1.Primary.Size18.Margin8End">
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
    </style>

    <style name="TextViewAppearanceBody1.Primary.Size18.Margin4End">
        <item name="android:layout_marginEnd">@dimen/margin_4</item>
    </style>

    <style name="TextViewAppearanceBody1.White.Bold.Margin20Left10Bottom">
        <item name="android:layout_marginStart">@dimen/margin_20</item>
        <item name="android:layout_marginBottom">@dimen/margin_10</item>
    </style>

    <style name="TextViewAppearanceBody2" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextViewAppearanceBody2.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewAppearanceBody2.White.Margin20">
        <item name="android:layout_margin">@dimen/margin_20</item>
    </style>

    <!--TextInput styles-->
    <style name="TextInputMaterial" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>

    <style name="TextInputMaterial.Margin16">
        <item name="android:layout_margin">@dimen/margin_16</item>
    </style>

    <style name="TextInputMaterial.Margin16EndTopBottom8Start">
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
    </style>

    <!--EditTextMaterial styles-->
    <style name="EditTextMaterial" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
    </style>

    <!--EditText styles-->
    <style name="EditText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="EditText.MaxLine1">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.MaxLine1.maxLength200">
        <item name="android:maxLength">200</item>
    </style>

    <style name="EditText.MaxLine1.maxLength20">
        <item name="android:maxLength">20</item>
    </style>

    <style name="EditText.MaxLine1.maxLength5">
        <item name="android:maxLength">5</item>
    </style>

    <style name="EditText.MaxLine1.maxLength20.NumbersDecimalOnly">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <!--Buttons-->
    <style name="ButtonMaterial" parent="Widget.MaterialComponents.Button">
    </style>

    <style name="ButtonMaterial.Padding30StartEnd15TopBottom" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingStart">@dimen/padding_30</item>
        <item name="android:paddingEnd">@dimen/padding_30</item>
        <item name="android:paddingTop">@dimen/padding_15</item>
        <item name="android:paddingBottom">@dimen/padding_15</item>
    </style>

    <style name="ButtonMaterial.Corner16">
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="ButtonTextMaterial" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="ButtonTextMaterial.Margin16">
        <item name="android:layout_margin">@dimen/margin_16</item>
    </style>

    <style name="ButtonTextMaterial.Margin16NoTop">
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
    </style>

    <style name="ButtonMaterial.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonTextMaterial.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonMaterial.White.Background">
        <item name="backgroundTint">@color/button_colored_background</item>
    </style>

    <style name="ButtonMaterial.White.Background.Disabled">
        <item name="android:enabled">false</item>
    </style>

    <!--ImageView styles-->
    <style name="ImageView" parent="@style/AppTheme">
    </style>

    <style name="ImageView.Size24">
        <item name="android:layout_width">@dimen/image_24</item>
        <item name="android:layout_height">@dimen/image_24</item>
    </style>

    <style name="ImageView.Size24.FitCenter">
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ImageView.Size24.FitCenter.Margin16Start">
        <item name="android:layout_marginStart">@dimen/margin_16</item>
    </style>

    <style name="ImageView.Size24.FitCenter.Margin16Start20Top">
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_20</item>
    </style>

    <style name="ImageView.Size32">
        <item name="android:layout_width">@dimen/image_32</item>
        <item name="android:layout_height">@dimen/image_32</item>
    </style>

    <style name="ImageView.Size32.Margin4">
        <item name="android:layout_margin">@dimen/margin_4</item>
    </style>

    <style name="ImageView.Size64">
        <item name="android:layout_width">@dimen/image_64</item>
        <item name="android:layout_height">@dimen/image_64</item>
    </style>

    <style name="ImageView.Size64.Margin20">
        <item name="android:layout_margin">@dimen/margin_20</item>
    </style>

    <!--View Lines styles-->
    <style name="ViewLine" parent="@style/AppTheme">
    </style>

    <style name="ViewLine.Height1px">
        <item name="android:layout_height">1px</item>
    </style>

    <style name="ViewLine.Height1dp">
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="ViewLine.Height1px.Grey">
        <item name="android:background">@color/grey_10</item>
    </style>

    <style name="ViewLine.Height1px.Primary">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ViewLine.Height1dp.Black">
        <item name="android:background">@color/black</item>
    </style>

    <style name="ViewLine.Width1dp">
        <item name="android:layout_width">1dp</item>
    </style>

    <style name="ViewLine.Width1dp.Black">
        <item name="android:background">@color/black</item>
    </style>

    <style name="ViewLine.Width1dp.Primary">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--CardView styles-->
    <style name="CardViewMaterial" parent="CardView.Light">
    </style>

    <style name="CardViewMaterial.BackgroundRipple">
        <item name="android:background">@drawable/background_ripple_rectangle</item>
    </style>

    <style name="CardViewMaterial.BackgroundRipple.Margin4">
        <item name="android:layout_margin">@dimen/margin_4</item>
    </style>

    <!--ProgressBar styles-->
    <style name="ProgressBarMaterial" parent="Widget.MaterialProgressBar.ProgressBar.Horizontal">
    </style>

    <!--FloatingActionButton-->
    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
    </style>

    <style name="FloatingActionButton.Accent">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="FloatingActionButton.Accent.SizeNormal">
        <item name="fabSize">normal</item>
    </style>

    <style name="FloatingActionButton.Accent.SizeNormal.Margin16EndBottom">
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
    </style>

    <!--RecyclerView styles-->
    <style name="RecyclerView" parent="@style/AppTheme">
    </style>

    <style name="RecyclerView.BackgroundGray10">
        <item name="background">@color/grey_10</item>
    </style>

    <!--Constraint styles-->
    <style name="Constraint" parent="@style/AppTheme">
    </style>

    <style name="Constraint.Margin8NoEnd">
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
    </style>

</resources>
