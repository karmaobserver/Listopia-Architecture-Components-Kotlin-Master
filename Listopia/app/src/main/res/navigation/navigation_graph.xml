<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@+id/fragment_shopping_list">

    <fragment
        android:id="@+id/fragment_shopping_list"
        android:name="com.aleksej.makaji.listopia.screen.shoppinglist.ShoppingListFragment"
        android:label="@string/title_shopping_list">
        <action
            android:id="@+id/action_fragment_shopping_list_to_fragment_shopping_list_add"
            app:destination="@id/fragment_shopping_list_add" />
        <action
            android:id="@+id/action_fragment_shopping_list_to_fragment_product_list"
            app:destination="@id/fragment_product_list" />
        <action
            android:id="@+id/action_fragment_shopping_list_to_fragment_shopping_list_edit"
            app:destination="@id/fragment_shopping_list_edit" />
    </fragment>
    <fragment
        android:id="@+id/fragment_shopping_list_add"
        android:name="com.aleksej.makaji.listopia.screen.shoppinglistadd.ShoppingListAddFragment"
        android:label="@string/title_shopping_list_create" />
    <fragment
        android:id="@+id/fragment_product_list"
        android:name="com.aleksej.makaji.listopia.screen.productlist.ProductListFragment"
        android:label="@string/title_products" >
        <argument
            android:name="shoppingListId"
            app:argType="long" />
        <action
            android:id="@+id/action_fragment_product_list_to_fragment_product_add"
            app:destination="@id/fragment_product_add" />
    </fragment>
    <fragment
        android:id="@+id/fragment_product_add"
        android:name="com.aleksej.makaji.listopia.screen.productadd.ProductAddFragment"
        android:label="@string/title_product_add" >
        <argument
            android:name="shoppingListId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/fragment_shopping_list_edit"
        android:name="com.aleksej.makaji.listopia.screen.shoppinglistedit.ShoppingListEditFragment"
        android:label="@string/title_shopping_list_edit" >
        <argument
            android:name="shoppingListId"
            app:argType="long" />
    </fragment>
</navigation>